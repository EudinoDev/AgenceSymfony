{{ form_start(form) }}
<div class="row">
	<div class="col-md-4">
		{{ form_row(form.title) }}
	</div>
	<div class="col-md-4">
		{{ form_row(form.surface) }}
	</div>
	<div class="col-md-4">
		{{ form_row(form.price) }}
	</div>
</div>

<div class="row" style="vertical-align:bottom;">
	<div class="col-md-2">
		{{ form_row(form.rooms) }}
	</div>

	<div class="col-md-2">
		{{ form_row(form.bedrooms) }}
	</div>

	<div class="col-md-2">
		{{ form_row(form.heat) }}
	</div>

	<div class="col-md-2">
		{{ form_row(form.floor) }}
	</div>

</div>

<div class="row">
	<div class="col-md-2">
		{{ form_row(form.adress) }}
	</div>
	<div class="col-md-2">
		{{ form_row(form.city) }}
	</div>
	<div class="col-md-2">
		{{ form_row(form.postal_code, {'attr': {'placeholder': '5 chiffres sans espace'}}) }}
	</div>
</div>

<div class="row">
	<div class="col-md-4">
		{{ form_row(form.sold) }}
	</div>
</div>


{{ form_rest(form) }}
<button class="btn btn-primary">{{ button | default('Create New') }}</button>
{{ form_end(form)}}
